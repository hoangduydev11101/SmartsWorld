<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.lehoangduy.smartworld.HomePage.PageThree">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:visibility="invisible"
        android:textSize="18sp"
        android:textColor="#ffaa00"
        android:text="Mời bạn đăng nhập để kiểm tra giỏ hàng"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtNhacNho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:visibility="invisible"
        android:id="@+id/txtThongBao"
        android:layout_above="@+id/txtNhacNho"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="#ffaa00"
        android:text="Giỏ hàng của bạn đang trống"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:layout_marginTop="10sp"
            android:divider="@android:color/transparent"
            android:layout_marginBottom="100sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvGioHang"
            ></ListView>
        <Button
            android:id="@+id/btnThanhToanDHFARG"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="-100sp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:text="Tiến hành thanh toán"
            android:background="#ffbb00"
            android:layout_width="match_parent"
            android:layout_height="50sp" />
    </LinearLayout>

</RelativeLayout>
